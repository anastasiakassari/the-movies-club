<h1 class="text-center apptheme-txt mt-4">Log in for The Movies Club</h1>
<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter an email address" %>
          </div>   
        </div>
        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a password" %>
          </div>   
        </div>
        <div class="form-group row justify-content-center">
        <%= form.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancel and return to users ]", users_path(@user), class: "apptheme-txt mb-3" %>
  </div>  
</div>