<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10"> 
      <%= render 'shared/validation_errors', obj: @movie %>   
      <%= form_with(model: @movie, local: true, class: "apptheme shadow p-3 mb-3 rounded") do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of movie" %>
          </div>   
        </div>
        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.text_area :description, class: "form-control shadow rounded", placeholder: "Description of movie", rows: 10 %>
          </div>   
        </div>
        <div class="form-group row justify-content-center">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  
  </div>
  <div class="row justify-content-center">
    <%= link_to "[ Return to movies ]", movies_path, class: "apptheme-txt mb-3" %>
  </div>
</div>