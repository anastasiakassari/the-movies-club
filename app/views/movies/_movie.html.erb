<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-body">
        <h5 class="card-title"><%= link_to movie.title, movie, class: "apptheme-txt" %></h5>
        <p class="card-text text-left">
          <%= simple_format(movie.description, length: 100) %>
        </p>
        <% if movie.ratings.any? %>
          <p class="movie-ratings" data-id="<%= movie.id %>">
            <span class="text-success"><%= pluralize(count_likes(movie.ratings), "Like") if count_likes(movie.ratings) > 0 %></span>
            <span class="text-danger"><%= pluralize(count_hates(movie.ratings), "Hate") if count_hates(movie.ratings) > 0 %></span>
          </p>
        <% end %>
        <% if logged_in? %>
          <% if current_user != movie.user %>
            <p>
              <%= link_to "Like", rate_path(movie: movie, value: 1), method: :post, remote: true , class: "rate btn btn-outline-success"%>               
              <%= link_to "Hate", rate_path(movie: movie, value: -1), method: :post, remote: true , class: "rate btn btn-outline-danger"%>
            </p>
          <% end %>
          <% if current_user == movie.user || current_user.admin? %>
            <%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-info" %>
            <%= link_to 'Delete', movie, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <div class="card-footer">
        <small class="text-muted">              
          Created by 
          <% if movie.user %>
                  by <%= link_to movie.user.username, user_path(movie.user) %>
                <% else %>
                  by Unknown
                <% end %>
          <%= time_ago_in_words(movie.created_at) %> ago 
          (last edited <%= time_ago_in_words(movie.updated_at) %> ago)
        </small>
      </div>
    </div>
  </div>
</div>