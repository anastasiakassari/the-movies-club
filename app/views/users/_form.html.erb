<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/validation_errors', obj: @user %>   
      <%= form_with(model: @user, local: true, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
        <div class="form-group row">
          <%= form.label :username, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Username" %>
          </div>   
        </div>
        <div class="form-group row">
          <%= form.label :full_name, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.text_field :full_name, class: "form-control shadow rounded", placeholder: "Full name" %>
          </div>   
        </div>
        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Email address" %>
          </div>   
        </div>
        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-white" %> <br>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Password" %>
          </div>   
        </div>
        <div class="form-group row justify-content-center">
        <%= form.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
    <%= link_to(@user.new_record? ? "[ Cancel and return to users ]" : "[ Cancel and return to user profile ]", @user.new_record? ? users_path(@user) : @user, class: "text-white mb-3") %>
  </div>  
</div>